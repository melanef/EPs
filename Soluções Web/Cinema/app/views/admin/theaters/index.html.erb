<h1>Cinemas</h1>

<% if @theaters.any? %>
<table>
    <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th colspan="3">&nbsp;</th>
    </tr>
    <% @theaters.each do |theater| %>
    <tr>
        <td><%= theater.name %></td>
        <td><%= theater.address %>, <%= theater.address_number %></td>
        <td><%= theater.city %></td>
        <td><%= theater.state %></td>
        <td><%= link_to 'Visualizar', admin_theater_path(theater) %></td>
        <td><%= link_to 'Editar', edit_admin_theater_path(theater) %></td>
        <td><%= link_to 'Remover', admin_theater_path(theater), method: :delete, data: { confirm: "Você está prestes a remover definitivamente este cinema.\nVocê tem certeza e deseja prosseguir com esta operação?" } %></td>
    </tr>
    <% end %>
</table>
<% end %>

<%= link_to 'Incluir novo', new_admin_theater_path %>